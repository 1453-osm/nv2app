<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true">

    <!-- Üst Kısım: Widget Önizleme Alanı (Kompakt) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_preview"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:cardBackgroundColor="?attr/colorSurfaceVariant"
        app:cardCornerRadius="12dp"
        app:strokeColor="?attr/colorOutlineVariant"
        app:strokeWidth="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/scroll_controls">

        <FrameLayout
            android:id="@+id/layout_preview_surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="center"
            android:padding="16dp">

            <!-- Gerçek widget önizlemesi buraya eklenecek -->
            <FrameLayout
                android:id="@+id/widget_preview_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clipChildren="false"
                android:clipToPadding="false" />

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Alt Kısım: Ayarlar -->
    <ScrollView
        android:id="@+id/scroll_controls"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="20dp"
        android:paddingTop="16dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/layout_buttons"
        app:layout_constraintTop_toBottomOf="@+id/card_preview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/configure_widget"
                android:textAppearance="?attr/textAppearanceTitleLarge"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/configure_widget_subtitle"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <!-- Opaklık -->
            <TextView
                android:id="@+id/text_opacity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_opacity"
                android:textAppearance="?attr/textAppearanceTitleSmall"
                android:textColor="?attr/colorOnSurface" />

            <LinearLayout
                android:id="@+id/layout_opacity_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_opacity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:valueFrom="0"
                    android:valueTo="100"
                    android:value="80"
                    android:stepSize="1" />

                <TextView
                    android:id="@+id/text_opacity_value"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="80%"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface" />
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_opacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Köşe Yarıçapı -->
            <TextView
                android:id="@+id/text_card_radius_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/card_radius"
                android:textAppearance="?attr/textAppearanceTitleSmall"
                android:textColor="?attr/colorOnSurface" />

            <LinearLayout
                android:id="@+id/layout_card_radius_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_card_radius"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:valueFrom="0"
                    android:valueTo="120"
                    android:value="75"
                    android:stepSize="1" />

                <TextView
                    android:id="@+id/text_card_radius_value"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="75dp"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface" />
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_card_radius"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Gradyan Modu -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_gradient_mode"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="@string/gradient_mode">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_gradient_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Metin Rengi Modu -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_text_color_mode"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="@string/text_color_mode">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_text_color_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Arka Plan Rengi Modu -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layout_bg_color_mode"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="@string/bg_color_mode">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_bg_color_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Metin Boyutu (Sadece TextOnly Widget için görünür) -->
            <TextView
                android:id="@+id/text_text_size_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_size"
                android:textAppearance="?attr/textAppearanceTitleSmall"
                android:textColor="?attr/colorOnSurface"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layout_text_size_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_text_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:valueFrom="80"
                    android:valueTo="140"
                    android:value="100"
                    android:stepSize="1" />

                <TextView
                    android:id="@+id/text_text_size_value"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="100%"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface" />
            </LinearLayout>

            <!-- Takvim Ayarları (Sadece Calendar Widget için görünür) -->
            <LinearLayout
                android:id="@+id/layout_calendar_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/calendar_settings"
                    android:textAppearance="?attr/textAppearanceTitleSmall"
                    android:textColor="?attr/colorOnSurface" />

                <!-- Tarih Görünümü -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_date_display_mode"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="@string/date_display_mode">

                    <AutoCompleteTextView
                        android:id="@+id/dropdown_date_display_mode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Hicri Font Stili -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_hijri_font_style"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="@string/hijri_font_style">

                    <AutoCompleteTextView
                        android:id="@+id/dropdown_hijri_font_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Miladi Font Stili -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_gregorian_font_style"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="@string/gregorian_font_style">

                    <AutoCompleteTextView
                        android:id="@+id/dropdown_gregorian_font_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Butonlar -->
    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:elevation="8dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_cancel"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="@string/cancel" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_save"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
